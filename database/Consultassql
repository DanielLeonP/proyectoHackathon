CREATE TABLE Medico (idMedico NUMBER PRIMARY KEY, NombreMedico VARCHAR(20),ApellidoMedico VARCHAR(20), CorreoMedico VARCHAR(20), ContrasenaMedico VARCHAR(20);

CREATE TABLE Paciente (idPaciente NUMBER PRIMARY KEY, NombrePaciente VARCHAR(20),ApellidoPaciente VARCHAR(20), CorreoPaciente VARCHAR(20), ContrasenaPaciente VARCHAR(20);

CREATE TABLE Consulta (idConsulta NUMBER PRIMARY KEY, Fecha DATE, idPaciente NUMBER FOREIGN KEY, idMedico NUMBER FOREIGN KEY, DescripcionConsulta VARCHAR(200);

CREATE TABLE Sintomas (idCSintomas NUMBER PRIMARY KEY, NombreSintoma VARCHAR(20), DescripcionSintoma VARCHAR(200);

CREATE TABLE Recomendaciones (idCRecomendaciones NUMBER PRIMARY KEY, NombreRecomendaciones VARCHAR(20), DescripcionRecomendaciones VARCHAR(200);

CREATE TABLE SintomasRecomendaciones (idRecomendaciones NUMBER FOREIGN KEY,idCSintomas NUMBER FOREIGN KEY;

CREATE TABLE HistorialClinico (idHistorialClinico NUMBER PRIMARY KEY,idPaciente NUMBER FOREIGN KEY, PadecimientoFamiliar VARCHAR(50);

CREATE TABLE Enfermedades (idEnfermedades NUMBER PRIMARY KEY,NombreEnfermedad VARCHAR(50), DescripcionEnfermedad VARCHAR(200);

