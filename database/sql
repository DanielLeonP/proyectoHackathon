DROP TABLE Medicos;
DROP TABLE Pacientes;
DROP TABLE Consultas;
DROP TABLE Sintomas;
DROP TABLE Recomendaciones;
DROP TABLE SintomasRecomendaciones;
DROP TABLE HistorialesClinicos;
DROP TABLE Enfermedades;
DROP TABLE Prevensiones;
DROP TABLE Riesgos;
DROP TABLE Tratamientos;


CREATE TABLE Medicos (
    IdMedico INT PRIMARY KEY, 
    NombreMedico VARCHAR(20),
    ApellidoMedico VARCHAR(20), 
    CorreoMedico VARCHAR(20), 
    ContrasenaMedico VARCHAR(20) 
);

CREATE TABLE Pacientes 
    (idPaciente INT PRIMARY KEY, 
    NombrePaciente VARCHAR(20),
    ApellidoPaciente VARCHAR(20), 
    CorreoPaciente VARCHAR(20), 
    ContrasenaPaciente VARCHAR(20)
);

CREATE TABLE Consultas (
    idConsulta INT PRIMARY KEY, 
    Fecha DATE,     
    DescripcionConsulta VARCHAR(200),
    idPaciente INT, 
    idMedico INT
);

CREATE TABLE Sintomas (
    idCSintomas INT PRIMARY KEY, 
    NombreSintoma VARCHAR(20), 
    DescripcionSintoma VARCHAR(200)
);

CREATE TABLE Recomendaciones (
    idCRecomendaciones INT PRIMARY KEY, 
    NombreRecomendaciones VARCHAR(20), 
    DescripcionRecomendaciones VARCHAR(200)
);

CREATE TABLE SintomasRecomendaciones (
    idRecomendaciones INT,
    idCSintomas INT
);

CREATE TABLE HistorialesClinicos (
    idHistorialClinico INT PRIMARY KEY,    
    PadecimientoFamiliar VARCHAR(50),
    idPaciente INT
);

CREATE TABLE Enfermedades (
    idEnfermedad INT PRIMARY KEY,
    NombreEnfermedad VARCHAR(50), 
    DescripcionEnfermedad VARCHAR(200)
);

CREATE TABLE Prevensiones (
    idPrevension INT PRIMARY KEY,      
    DescripcionPrev VARCHAR(200),
    idEnfermedad INT
);

CREATE TABLE Riesgos (
    idRiesgo INT PRIMARY KEY,     
    DescripcionRiesgo VARCHAR(200),
    idEnfermedad INT
);

CREATE TABLE Tratamientos (
    idTratamiento INT PRIMARY KEY, 
    DescripcionTratamiento VARCHAR(200),
    idEnfermedad INT 
);

